<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#015c56"
    tools:context=".InformPersonalActivity">

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="410dp"
        android:layout_height="422dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="173dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Contraseña:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_passwordCliente"
                android:layout_width="209dp"
                android:layout_height="49dp"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="textPassword"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Direccion:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_DireccionCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Estado civil:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="225dp"
                android:layout_height="53dp"
                android:background="#f1c9a0 "
                android:dropDownSelector="#F1C9A0"
                android:popupBackground="#015c56"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fecha nacimiento:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_FechaNacimiento"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="date"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Cédula:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/txt_CedulaCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Nombre:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_NomCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="textPersonName"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Salario:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_SalarioCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="numberDecimal"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="404dp"
            android:layout_height="25dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Telefono:"
                android:textColor="#F1C9A0"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/txt_telefonoCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#F5812B"
                android:ems="10"
                android:inputType="phone"
                android:textColor="#f1c9a0 "
                android:textColorHint="#F1C9A0"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_editarCliente"
        android:layout_width="189dp"
        android:layout_height="65dp"
        android:onClick="actualizar"
        android:text="Editar cliente"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.894" />

    <TextView
        android:id="@+id/tv_nomCliente"
        android:layout_width="154dp"
        android:layout_height="52dp"
        android:textColor="#f1c9a0 "
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

</androidx.constraintlayout.widget.ConstraintLayout>